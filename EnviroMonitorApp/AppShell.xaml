<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EnviroMonitorApp.Views"
    x:Class="EnviroMonitorApp.AppShell"
    Shell.FlyoutBehavior="Disabled">

  <!-- Title bar style, etc. -->
  <Shell.Resources>
    <!-- your styles here -->
  </Shell.Resources>

  <!-- Single tab containing your HistoricalDataPage -->
  <TabBar>
    <ShellContent
      Title="History"
      Icon="history_icon.png"
      ContentTemplate="{DataTemplate views:HistoricalDataPage}" />
  </TabBar>

</Shell>
