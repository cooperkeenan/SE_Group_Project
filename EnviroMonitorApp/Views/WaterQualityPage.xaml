<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:models="clr-namespace:EnviroMonitorApp.Models"
  xmlns:charts="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
  x:Class="EnviroMonitorApp.Views.WaterQualityPage"
  Title="Water Quality">

  <VerticalStackLayout Padding="10" Spacing="10">

    <!-- sensor picker -->
    <Picker
      ItemsSource="{Binding SensorTypes}"
      SelectedItem="{Binding SelectedSensorType}"
      Title="Select measure" />

    <!-- chart -->
    <charts:ChartView
      Chart="{Binding Chart}"
      HeightRequest="250"
      HorizontalOptions="FillAndExpand" />

    <!-- raw data list -->
    <CollectionView ItemsSource="{Binding WaterQuality}">
      <CollectionView.ItemTemplate>
        <DataTemplate x:DataType="models:WaterQualityRecord">
          <!-- ... your existing Frame/DataTemplate ... -->
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>

  </VerticalStackLayout>
</ContentPage>
