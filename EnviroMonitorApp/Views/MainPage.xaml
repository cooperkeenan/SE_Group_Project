<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EnviroMonitorApp.Views.MainPage"
    Title="Dashboard">

    <VerticalStackLayout
        Padding="30"
        Spacing="25"
        VerticalOptions="Center">

        <Label
            Text="🌱 Welcome to EnviroMonitor"
            FontSize="24"
            HorizontalOptions="Center" />

        <Label
            x:Name="StatusLabel"
            Text="👀 Loading..."
            FontSize="16"
            TextColor="DarkGray"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
