{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [ "EnviroMonitorApp.Core/EnviroMonitorApp.Core.csproj" ],
          "cwd": "../"       
        },
        {
          "files": [ "EnviroMonitorApp/EnviroMonitorApp.csproj" ],
          "cwd": "../"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml", "*.md" ]
      }
    ],
    "dest": "../docs/api-docs",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appName": "EnviroMonitorApp",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
