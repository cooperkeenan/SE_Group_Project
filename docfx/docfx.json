{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/v2/docfx.schema.json",

  "metadata": [
    {

      "src": [
        {
          "cwd": "..",
          "files": [
            "EnviroMonitorApp.Core/EnviroMonitorApp.Core.csproj",
            "EnviroMonitorApp/EnviroMonitorApp.csproj"
          ]
        }
      ]

    }
  ],

  "build": {

    "content": [
      { "files": [ "api/**.yml" ] },

      { "files": [ "*.md" ] }
    ],

    "dest": "../docs/api-docs",
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_appName": "EnviroMonitorApp",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
