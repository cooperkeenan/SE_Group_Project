{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "metadata": [
    {
      "src": [
        {
          "src": "../../EnviroMonitorApp",
          "files": [ "EnviroMonitorApp.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],

  "build": {
    "content": [
      { "files": [ "index.md" ] },                       
      { "files": [ "api/**.yml", "api/index.md" ] },   
      { "files": [ "articles/**.md" ] }               
    ],
    "resource": [
      { "files": [ "images/**" ] }
    ],
    "dest": "_site",
    "template": [ "default", "modern" ],

    "globalMetadata": {
      "_appName":      "EnviroMonitorApp",
      "_appTitle":     "EnviroMonitorApp API",
      "_enableSearch": true,
      "pdf":           true
    }
  }
}

